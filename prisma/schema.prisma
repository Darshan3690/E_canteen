generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Profile {
  id     String @id @default(uuid())
  name   String
  email  String @unique
  role   Role?
  orders Order[]
}

enum Role {
  student
  manager
}

model Restaurant {
  id           String     @id @default(uuid())
  name         String
  image        String
  rating       Float      @default(4.0)
  deliveryTime String
  isVeg        Boolean    @default(false)
  menuItems    MenuItem[]
}

model MenuItem {
  id           String      @id @default(uuid())
  name         String
  price        Float
  image        String
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  restaurantId String
  orderItems   OrderItem[]   // ðŸ‘ˆ ADD THIS LINE
}


model Order {
  id          String      @id @default(uuid())
  student     Profile     @relation(fields: [studentId], references: [id])
  studentId   String
  totalAmount Float
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  items       OrderItem[]
}

model OrderItem {
  id          String   @id @default(uuid())
  order       Order    @relation(fields: [orderId], references: [id])
  orderId     String
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId  String
  quantity    Int
}

enum OrderStatus {
  PENDING
  PREPARING
  READY
  COMPLETED
}
